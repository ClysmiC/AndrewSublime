%YAML 1.2
---
http://www.sublimetext.com/docs/3/syntax.html
NOTE (als) - Simplified C++ syntax to identify (and color) just the things I care about
 Heavily borrowed from Default/C++.sublime-syntax

name: C++ (als)
file_extensions:
  - cpp
  - cc
  - cp
  - cxx
  - c++
  - C
  - h
  - hh
  - hpp
  - hxx
  - h++
  - inl
  - ipp
scope: source.c++
variables:
    foo: 'bar'
    
contexts:
    main:
          # https://en.cppreference.com/w/cpp/preprocessor
        - match: ^(#define|#undef|#include|#if|#ifdef|#ifndef|#else|#elif|#endif|#line|#error|#pragma)\b
          # TODO - what scope/metascope to put these in?
          #  Should it be one for preprocessor? Do I also want to push keyword.control.import.c++
          #  for #include
          # scope: keyword.control.import.c++
          # captures:
          #   1: keyword.control.import.c++

        - match: \b(if|else|for|while)\b
          scope: keyword.control.c++
